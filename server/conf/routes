# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                          controllers.Application.index
GET        /logout                    controllers.Application.logout

GET        /login                     controllers.UserController.getLogin
POST       /login                     controllers.UserController.postLogin

GET        /login/google              controllers.UserController.withGoogle
GET        /oauth2callback            controllers.UserController.oauth2callback(state: String, code: String)

GET        /register                  controllers.UserController.getRegister
POST       /register                  controllers.UserController.postRegister
GET        /register/all              controllers.UserController.all

GET        /newVisitor                controllers.VisitorController.getNewVisitor
POST       /newVisitor               controllers.VisitorController.postNewVisitor

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file              controllers.Assets.versioned(path="/public", file)
